<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :desc %>
    <%= f.text_field :desc %>
  </div>

  <div class="field">
    <%= f.label :task_type %>
    <%= f.number_field :task_type, max: 2, min:0 %>
  <br>
    0: En ole koskaan
    <br>
    1: 10 sek tehtävät
    <br>
    2: Joku muu
  </div>

  <div class="field">
    <%= f.label :time %>
    <%= f.number_field :time, :value =>'0' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
